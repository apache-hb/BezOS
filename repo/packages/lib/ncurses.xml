<package name='ncurses' version='6.4'>
    <download file='ncurses-6.4.tar.gz'
              url='https://github.com/mirror/ncurses/archive/refs/tags/v6.4.tar.gz'
              sha256='39893846139518e6c2d00ac1d354d4889f0f394acd44885d70b14eaef4e23e8e'
              trim-root-folder='true'
              archive='tar' />

    <require package='llvm' />
    <require package='sysapi' />
    <require package='automake' />
    <require package='autoconf' />

    <configure with='shell' path='@REPO@/data/autotools-update.sh'>
        <arg>@SOURCE_ROOT@</arg>
    </configure>

    <configure with='shell' path='@REPO@/data/autotools-reconf.sh'>
        <arg>@SOURCE_ROOT@</arg>
    </configure>

    <configure with='autoconf' using='@PREFIX@/automake/bin/automake'>
        <env CC='@PREFIX@/llvm/bin/clang'
             LD='@PREFIX@/llvm/bin/ld.lld'
             LDFLAGS='@PREFIX@/sysapi/lib/crtstart.o
                      @PREFIX@/sysapi/lib/libbezos-sysapi.a
                      @PREFIX@/sysapi/lib/libbezos-posix.a
                      -e ProgramMain
                      -nostartfiles
                      -nostdlib
                      -Wl,-z,norelro'
             CFLAGS='--sysroot @PREFIX@/llvm
                     -isystem @PREFIX@/sysapi/include/posix
                     -nostdlib' />
        <options host='x86_64-bezos-elf' />
    </configure>
</package>
